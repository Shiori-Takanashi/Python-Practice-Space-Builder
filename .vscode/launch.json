{
    "version": "0.2.0", // バージョン。通常は固定。
    "configurations": [
        // 複数のデバッグ設定を並べられる
        {
            "name": "Python: Run CLI", // デバッグ名（GUIに表示される）
            "type": "debugpy", // デバッガの種類（例：python, node, cppdbg）
            "request": "launch", // "launch" なら新規起動, "attach" なら既存プロセスに接続
            "program": "${workspaceFolder}/cli/pbuild.py", // ← 正しい位置
            "args": [
                "-d",
                "logs,samples"
            ], // コマンドライン引数
            "console": "integratedTerminal" // 実行コンソールの種類
        }
    ]
}
